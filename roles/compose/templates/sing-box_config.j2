{
    "log": {
        "level": "info"
    },
    "inbounds": [
        {
            "type": "vless",
            "tag": "vless-in",
            "listen": "::",
            "listen_port": 443,
            "users": [
                {
                    "name": "{{ compose_user_name }}",
                    "uuid": "{{ compose_user_uuid }}",
                    "flow": "xtls-rprx-vision"
                }
            ],
            "tls": {
                "enabled": true,
                "server_name": "{{ compose_tls_server_name }}",
                "reality": {
                    "enabled": true,
                    "handshake": {
                        "server": "{{ compose_tls_handshake_server }}",
                        "server_port": {{ compose_tls_handshake_server_port }}
                    },
                    "private_key": "{{ compose_tls_private_key }}",
                    "short_id": [
                        {% for id in compose_tls_short_id %}
                        "{{ id }}"{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    ]
                }
            },
            "multiplex": {
                "enabled": false,
                "padding": true,
                "brutal": {
                    "enabled": false,
                    "up_mbps": 1000,
                    "down_mbps": 1000
                }
            }
        }
    ],
    "outbounds": [
        {
            "type": "direct",
            "tag": "direct"
        }
    ]
}
